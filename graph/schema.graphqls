# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Squad {
  created_at: String
  current_cycle_name: String!
  id: String!
  modified_at: String
  name: String!
  scope: [Scope]
}

type Scope {
  colour: String!
  created_at: String
  id: String!
  modified_at: String
  name: String!
  progress: String!
  squad_id: String!
}

type SquadList {
  data: [Squad]
  has_more: Boolean!
  total_count: Int!
}

type Query {
  Squads: SquadList
}

input NewSquad {
  current_cycle_name: String
  name: String!
}

input NewScope {
  colour: String!
  name: String!
  squad_id: String!
}

type Mutation {
  CreateSquad(opts: NewSquad!): Squad!
  CreateScope(opts: NewScope!): Scope!
}
